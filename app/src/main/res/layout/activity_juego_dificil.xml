<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_dificil"
    android:orientation="vertical"
    tools:context=".activities.JuegoDificilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_weight="2"
        android:background="@drawable/fondo_inicio"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/imgDificil_13"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="imagenSeleccionada"
                android:src="@drawable/no" />

            <ImageView
                android:id="@+id/imgDificil_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="imagenSeleccionada"
                android:src="@drawable/no" />

            <ImageView
                android:id="@+id/imgDificil_15"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="imagenSeleccionada"
                android:src="@drawable/no" />

            <ImageView
                android:id="@+id/imgDificil_16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="imagenSeleccionada"
                android:src="@drawable/no" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">


            <ImageView
                android:id="@+id/imgDificil_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="imagenSeleccionada"
                android:src="@drawable/no" />

            <ImageView
                android:id="@+id/imgDificil_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="imagenSeleccionada"
                android:src="@drawable/no" />

            <ImageView
                android:id="@+id/imgDificil_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="imagenSeleccionada"
                android:src="@drawable/no" />

            <ImageView
                android:id="@+id/imgDificil_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="imagenSeleccionada"
                android:src="@drawable/no" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/imgDificil_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="imagenSeleccionada"
                android:src="@drawable/no" />

            <ImageView
                android:id="@+id/imgDificil_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="imagenSeleccionada"
                android:src="@drawable/no" />

            <ImageView
                android:id="@+id/imgDificil_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="imagenSeleccionada"
                android:src="@drawable/no" />

            <ImageView
                android:id="@+id/imgDificil_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="imagenSeleccionada"
                android:src="@drawable/no" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">


            <ImageView
                android:id="@+id/imgDificil_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="imagenSeleccionada"
                android:src="@drawable/no" />

            <ImageView
                android:id="@+id/imgDificil_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="imagenSeleccionada"
                android:src="@drawable/no" />

            <ImageView
                android:id="@+id/imgDificil_11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="imagenSeleccionada"
                android:src="@drawable/no" />

            <ImageView
                android:id="@+id/imgDificil_12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="imagenSeleccionada"
                android:src="@drawable/no" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/texto_juego_1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nombreJ1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoText="false"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/puntosJ1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:autoText="false"
                android:gravity="center"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/texto_juego_1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nombreJ2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoText="false"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/puntosJ2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:autoText="false"
                android:gravity="center"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <Chronometer
        android:id="@+id/tiempoD"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginRight="30dp"
        android:layout_weight="10"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold" />


</LinearLayout>